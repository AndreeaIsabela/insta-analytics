@media (min-width: 992px)
  header.masthead 
    height: 100vh
    min-height: 775px
    padding-top: 0
    padding-bottom: 0
    .device-container 
      max-width: 325px

header.masthead 
  position: relative
  width: 100%
  padding-top: 150px
  padding-bottom: 100px
  color: #fff
  background: url(./assets/bg-pattern.png),#7b4397
  background: url(./assets/bg-pattern.png),linear-gradient(to left,#7b4397,#dc2430)

  .device-container
    max-width: 325px
    margin-right: auto
    margin-left: auto
    .device-mockup
      position: relative
      width: 100%
      padding-bottom: 61.775701%
    .device-mockup.iphone10.portrait.white
      z-index: 10
      padding-bottom: 201.76%
      .device
        background-image: url(./assets/iphone_x_white_port.png)
        position: absolute
        top: 0
        bottom: 0
        left: 0
        right: 0
        width: 100%
        height: 100%
        background-size: 100% 100%
        background-repeat: no-repeat
        .screen
          top: 11.58%
          bottom: 11.58%
          left: 5.97%
          right: 5.97%
          position: absolute
          overflow: hidden
button.btn 
  text-transform: uppercase
  font-size: 14px
.btn-outline 
  color: #fff
  border: 1px solid
  border-color: #fff
  border-radius: 30px
  padding: 15px 45px
  &:hover
    transition: all .35s
    background-color: #fdcc52
    border-color: #fdcc52

          

